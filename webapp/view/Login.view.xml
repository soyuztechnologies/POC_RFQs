<mvc:View xmlns:core="sap.ui.core"
    controllerName="soyz.dev.poc.pocproject.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <App id="appLogin">
        <pages>
            <Page id="page" title="{i18n>title}" titleAlignment="Center" >
                <content>
                    <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
                        <items>
                            <form:SimpleForm width="300px" minWidth="1" >
                                <form:title>
                                    <core:Title text="Enter Login Details" icon="sap-icon://visits" ></core:Title>
                                </form:title>
                                <Label text="" ></Label>
                                <Input placeholder="Email ID" id="uemailid" type="Email" ></Input>
                                <Label text="" ></Label>
                                <Input placeholder="Password" id="upasswd" type="Password" ></Input>
                                <!-- showValueHelp="true" valueHelpIconSrc=""  -->
                                <Label text="" ></Label>
                                <Button text="Login" type="Emphasized" press="onLoginPress" ></Button>
                            </form:SimpleForm>
                        </items>
                    </VBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
